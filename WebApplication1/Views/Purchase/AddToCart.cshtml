<body>
    @using (@Html.BeginForm())
    {
       
        <!-- Header Wrap Starts -->
     
        <!-- Header Wrap Ends -->
        <!-- Breadcrumb Starts -->
        <div class="breadcrumb-wrap">
            <div class="container">
                <!-- Breadcrumb Starts -->
                <ol class="breadcrumb">
                    <li><a href="index.html">Home</a></li>
                    <li class="active">Shopping Cart</li>
                </ol>
                <!-- Breadcrumb Ends -->
            </div>
        </div>
        <!-- Breadcrumb Ends -->
        <!-- Main Container Starts -->
        <div class="main-container container">
            <!-- Main Heading Starts -->
            <h2 class="main-heading text-center">
                Shopping Cart
            </h2>
            <!-- Main Heading Ends -->
            <!-- Shopping Cart Table Starts -->
            <div class="table-responsive shopping-cart-table">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <td class="text-center">
                                Image
                            </td>
                            <td class="text-center">
                                Product Details
                            </td>
                            <td class="text-center">
                                Quantity
                            </td>
                            <td class="text-center">
                                Price
                            </td>
                            <td class="text-center">
                                Commands
                            </td>
                            <td class="text-center">
                                Action
                            </td>
                           
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.ProductModels != null)
                        {
                            foreach (var item in Model.ProductModels)//CHECK IF ITS NULL
                            {
                                <tr>
                                    <td class="text-center">
                                        @*<a href="product.html">
                                                <img src=@item.URLImage alt="Product Name" title="Product Name" class="img-thumbnail" />
                                            </a>*@
                                      <div class="image">
                                          <img src=@item.URLImage  width="60" height="60"   &emsp alt="product" class="img-responsive" />
                                        </div>
                                    </td>
                                    <td class="text-center">
                                        <br />
                                        <a href="product-full.html">@item.Name</a>
                                    </td>
                                    @*
                                        <td class="text-center">
                                            <div class="input-group btn-block">
                                                <input type="text" name="quantity" value="1" size="1" class="form-control" />
                                            </div>
                                        </td>*@
                                    @*
                                        <td class="text-center">
                                            $150.00
                                        </td>*@
                                    <td class="text-center">
                                        <br />
                                       1
                                    </td>
                                    <td class="text-center">
                                        <br />
                                        @item.Price$
                                    </td>
                                    <td class="text-center">
                                        <br />
                                    A spicial price just today!
                                    </td>
                                    <td class="text-center">
                                      
                                        <button type="button" title="Remove" class="btn btn-default tool-tip" onclick="removeFromSession(this)"
                                                   data-assigned-id="@item.ProductModelID">
                                            <i class="fa fa-times-circle"></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        }
                        @*<tr>
                            <td class="text-center">
                                <a href="product.html">
                                    <img src="images/product-images/cart-thumb-img2.jpg" alt="Product Name" title="Product Name" class="img-thumbnail" />
                                </a>
                            </td>
                            <td class="text-center">
                                <a href="product-full.html">Digital Electro Goods</a>
                            </td>
                            <td class="text-center">
                                <div class="input-group btn-block">
                                    <input type="text" name="quantity" value="1" size="1" class="form-control" />
                                </div>
                            </td>
                            <td class="text-center">
                                $150.00
