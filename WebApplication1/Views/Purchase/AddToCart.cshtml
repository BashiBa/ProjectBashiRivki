                                    </div>
                                </div>


                            </div>
                        </div>
                        <div class="panel panel-smart">
                            <div class="panel-heading">
                                <h3 class="panel-title" style="color:cornflowerblue" >
                                    Payment Information
                                </h3>
                            </div>
                           
                            <div class="panel-body">
                                <!-- Form Starts -->
                                @*<form class="form-horizontal" role="form">*@
                                <div class="form-group">
                                    @Html.LabelFor(model => model.CreditNum, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.CreditNum, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.CreditNum, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <br />

                                <div class="form-group">
                                    @Html.LabelFor(model => model.ValidityMonth, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.ValidityMonth, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.ValidityMonth, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <br />
                                <div class="form-group">
                                    @Html.LabelFor(model => model.ValidityYear, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.ValidityYear, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.ValidityYear, "", new { @class = "text-danger" })
                                    </div>

                                </div>

                                <br />
                                <h3> <b>NOTE:</b></h3>
                                <h5>If you do not want to pay online
                                    You can pay by phone 055-05502231 </h5>
                                <div class="form-group" @*onclick="location.href = 'Index/@item.ProductModelID'"*@>
