                        <!-- Shipment Information Block Starts -->
                        <div class="panel panel-smart">
                            <div class="panel-heading">
                                <h3 class="panel-title" style="color:cornflowerblue" >
                                    delivery details
                                </h3>
                            </div>
                            <div class="panel-body">
